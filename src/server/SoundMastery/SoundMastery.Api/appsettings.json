{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Hangfire": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentUserName",
      "WithMachineName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "WriteTo": {
      "FileLogger": {
        "Name": "File",
        "Args": {
          "path": "./Logs/SoundMastery.Api-.log",
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{RequestId}][{EventId}][{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": null,
          "restrictedToMinimumLevel": "Information"
        }
      }
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "6505a554-1897-4b07-920d-8e11af663bf6",
    "Issuer": "SoundMastery",
    "ExpirationInMinutes": "10"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(local);Database=SoundMastery;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}

